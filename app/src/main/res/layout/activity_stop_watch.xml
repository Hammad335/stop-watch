<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211D44"
    tools:context=".StopWatchActivity">

    <ImageView
        android:id="@+id/bgCircle"
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bgcircle"/>


    <ImageView
        android:id="@+id/roundPin"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icanchor" />


    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bgCircle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="#FFF"
        android:textSize="62sp"/>

    <Button
        android:id="@+id/pauseStopwatchBtn"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgbtnblue1"
        android:text="Pause Here"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:backgroundTint="#00ACC1"
        android:visibility="gone"/>

    <Button
        android:id="@+id/startStopwatchBtn"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgbtnblue1"
        android:text="Start Now"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:backgroundTint="#00ACC1" />


    <Button
        android:id="@+id/stopStopwatchBtn"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="5dp"
        android:text="Finish Now"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:background="@drawable/bgred" />

</RelativeLayout>